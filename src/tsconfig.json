{
  "compilerOptions": {
    "importHelpers": true,
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*",
    "custom-typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}